<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">

       <field formid="name" label="label.input.name.profile" type="string" mandatory="true" binding="name" max-length="50" missing-error="friend.firstname.missing" range-error="error.message.50orless"/>


       <field formid="nickname" label="label.input.nickname.profile" type="string" mandatory="true" binding="nickname" max-length="50" missing-error="address.nickname.missing" range-error="error.message.50orless"/>

       <!-- phone is mandatory for addresses -->
       <field formid="phone" label="label.input.phone.profile" description="address.phone.example" type="string" mandatory="true" regexp="(^\(?(\d{3})\)?[- ]?(\d{3})[- ]?(\d{4})$)"  binding="phone" min-length="10" max-length="20" missing-error="address.phone.missing" range-error="error.message.between10and20" parse-error="error.message.parse.phone"/>

       <!-- Birthday is mandatory for addresses -->
       <field formid="birth" label="label.input.birth.profile" description="address.phone.example" type="string" mandatory="true" binding="birth" min-length="10" max-length="20" missing-error="address.phone.missing" range-error="error.message.between10and20" parse-error="error.message.parse.phone"/>

       <!-- actions provided by the edit shipping address dialog -->
       <action formid="apply" valid-form="true"/>
       <action formid="remove" valid-form="false"/>
</form>
